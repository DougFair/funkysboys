<%- include('partials/header') %>


<div class="adminHomeContainer">
        <h2 style="margin-bottom: 40px">Administration Home</h2>
        <h3>Create a new dog</h3>
        <form action="/create" method="POST">
            <button type="submit" class="submitButton">CREATE</button>
        </form>

        <div class="updateForm">
            <h3>Update a dog</h3>
            <form action="/selectDog" method="POST"%>>  
                <select class="" name="name">
                    <option hidden="">Select A Dog!</option>
                    <% allDogs.forEach(dog => {%>
                    <option value="<%= dog.name %>">
                        <%= dog.name %>
                    </option>
                <% }); %>
                </select>
                <input type="submit" value="UPDATE" class="submitButton">
            </form>
        </div>
</div>

<%- include('partials/footer') %>