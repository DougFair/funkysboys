        <div class="graphGroups">
            <div class="graph">
                <h5 class="graphSubSectionHead">Stakes Total</h5>
                <div id="chart5" class="ct-chart5"></div> 
            </div>
            <div class="graph">
                <h5 class="graphSubSectionHead">Average Stakes Per Race</h5>
                <div id="chart6" class="ct-chart6"></div> 
            </div>
        </div>
        </div>
    </div>
</div>

