        <h4>Stakes</h4>
        </div>
        <div class="graphGroupPie">
            <div class="stakesInfo">
                <h4>Total: $<%= totalStakes %><h4>
                <h4>Syndicate: $<%= syndicateStakes %><h4>
            </div>
            <div class="graphPie">
                <h5>Break-even: <%= breakEven %>% </h5>
                <div id="chart7" class="ct-chart7"></div> 
            </div>
        </div>
    </div> 

        <div className="allGraphs">
